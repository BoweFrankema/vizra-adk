{
  "name": "aaronlumsden/laravel-ai-adk",
  "description": "A Laravel package for building AI-driven agents, inspired by Google ADK.",
  "type": "laravel-package",
  "license": "MIT",
  "authors": [
    {
      "name": "Aaron Lumsden",
      "email": "aaronlumsden@me.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "laravel/framework": "^11.0|^12.0",
    "prism-php/prism": "^0.60.0",
    "league/csv": "^9.23",
    "livewire/livewire": "^3.0"
  },
  "require-dev": {
    "orchestra/testbench": "^9.0",
    "pestphp/pest": "^3.0",
    "pestphp/pest-plugin-laravel": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "AaronLumsden\\LaravelAiADK\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AaronLumsden\\LaravelAiADK\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "AaronLumsden\\LaravelAiADK\\Providers\\AgentServiceProvider"
      ],
      "aliases": {
        "Agent": "AaronLumsden\\LaravelAiADK\\Facades\\Agent",
        "Workflow": "AaronLumsden\\LaravelAiADK\\Facades\\Workflow"
      }
    }
  },
  "scripts": {
    "test": "pest",
    "test-coverage": "pest --coverage"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
